<h2>Comics</h2>
<form method="post" action="/Comics/remove">
    <ul>
        @foreach (Comic comic in ViewBag.comics)
        {
            <li>
                @comic.Title - @comic.IssueNumber
                <input type="checkbox" name="removedComics" value="@comic.ComicId"/>
            </li>
        }
    </ul>
    <button>Remove</button>
</form>

<form method="post" action="/Comics/add">
    <label>Issue # <input type="number" size="3" name="issueNumber" /></label>
    <label>Title <input type="text" name="title" /></label>
    <button>Add</button>
</form>
